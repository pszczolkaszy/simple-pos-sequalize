<body>
  <!-- begin::Navbar -->
  <%- include('../includes/navigation.ejs') %>
  <!-- emd::Navbar -->
  
  <% if (bills.length <= 0) { %>
    <h1>Nothing there!</h1>
  <% } else { %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-3 d-flex flex-column">
        <% bills.forEach(bill => { %>
          <p># <%= bill.id %></p>
          <ul>
            <% bill.products.forEach(product => { %>
            <li>
              <%= product.name %> x<%= product.billItem.quantity %> $<%= product.billItem.quantity * product.price %>
            </li>
            <% }) %>
          </ul>
          <h6>Total price: $<%= bill.totalPrice %></h6>
          <h6>User: <%= bill.user.name %></h6>
          <h6>Date: <%= bill.createdAt %></h6>
          <hr>
        <% })%>
      </div>
    </div>
  </div>
  <% } %>
